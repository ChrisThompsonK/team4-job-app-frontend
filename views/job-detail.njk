{% extends "layout.njk" %}

{% block title %}{{ job.name }} - Kainos Job Portal{% endblock %}

{% block content %}
    <!-- Job Detail Content Section -->
    <div class="container mx-auto px-6 py-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <div class="flex items-center space-x-2 text-sm text-gray-600">
                <a href="/" class="hover:text-blue-600">Home</a>
                <span>/</span>
                <a href="/jobs" class="hover:text-blue-600">Jobs</a>
                <span>/</span>
                <span class="text-gray-400">{{ job.name }}</span>
            </div>
        </nav>

        <!-- Job Header -->
        <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm mb-8">
            <h1 class="text-4xl font-bold text-gray-800 mb-6">{{ job.name }}</h1>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <div class="flex items-center">
                    <i data-lucide="map-pin" class="h-5 w-5 mr-3 text-blue-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Location</div>
                        <div class="font-medium text-gray-800">{{ job.location }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="building" class="h-5 w-5 mr-3 text-purple-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Capability</div>
                        <div class="font-medium text-gray-800">{{ job.capability }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="badge" class="h-5 w-5 mr-3 text-green-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Band</div>
                        <div class="font-medium text-gray-800">{{ job.band }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="calendar" class="h-5 w-5 mr-3 text-red-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Closing Date</div>
                        <div class="font-medium text-red-600">{{ job.closingDate }}</div>
                    </div>
                </div>
            </div>
            
            <!-- Status and Open Positions Row -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="flex items-center">
                    <i data-lucide="{{ job.statusDisplay.iconClass }}" class="h-5 w-5 mr-3 {{ job.statusDisplay.color }}"></i>
                    <div>
                        <div class="text-sm text-gray-500">Status</div>
                        <div class="font-medium {{ job.statusDisplay.color }}">{{ job.statusDisplay.text }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="users" class="h-5 w-5 mr-3 text-orange-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Open Positions</div>
                        <div class="font-medium text-gray-800">{{ job.positionsText }}</div>
                    </div>
                </div>
            </div>

            {% if job.actions.headerAction.show %}
            <div class="flex justify-end">
                {% if job.actions.headerAction.disabled %}
                    <button class="{{ job.actions.headerAction.className }} px-8 py-3 text-lg" {% if job.actions.headerAction.style %}style="{{ job.actions.headerAction.style }}"{% endif %} disabled>{{ job.actions.headerAction.text }}</button>
                {% else %}
                    <a href="{{ job.actions.headerAction.href }}" class="{{ job.actions.headerAction.className }} px-8 py-3 text-lg" {% if job.actions.headerAction.style %}style="{{ job.actions.headerAction.style }}"{% endif %}>{{ job.actions.headerAction.text }}</a>
                {% endif %}
            </div>
            {% endif %}
        </div>

        <!-- Error and Success Messages -->
        {% if errorDisplay.show %}
            <div class="{{ errorDisplay.containerClass }}">
                <i data-lucide="{{ errorDisplay.iconClass }}" class="h-5 w-5 inline mr-2"></i>
                {{ errorDisplay.message }}
            </div>
        {% endif %}
        
        {% if successDisplay.show %}
            <div class="{{ successDisplay.containerClass }}">
                <i data-lucide="{{ successDisplay.iconClass }}" class="h-5 w-5 inline mr-2"></i>
                {{ successDisplay.message }}
            </div>
        {% endif %}

        <!-- Job Details -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Job Summary -->
                <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                        <i data-lucide="file-text" class="h-6 w-6 mr-3 text-blue-600"></i>
                        Job Summary
                    </h2>
                    <p class="text-gray-700 leading-relaxed">{{ job.summary }}</p>
                </div>

                <!-- Key Responsibilities -->
                <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                        <i data-lucide="list-checks" class="h-6 w-6 mr-3 text-green-600"></i>
                        Key Responsibilities
                    </h2>
                    <div class="flex items-start">
                        <i data-lucide="check-circle" class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0"></i>
                        <p class="text-gray-700 leading-relaxed">{{ job.keyResponsibilities }}</p>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                {% if isAuthenticated and currentUser.role === "admin" %}
                    <!-- Admin Actions Section - Edit and Delete -->
                    <div class="bg-red-50 p-6 rounded-lg border border-red-200 mb-6">
                        <h3 class="text-xl font-bold text-red-800 mb-4">Admin Actions</h3>
                        <p class="text-red-700 mb-4">Manage this job role</p>
                        <div class="space-y-3">
                            <a href="/jobs/{{ job.id }}/edit" class="btn bg-yellow-600 hover:bg-yellow-700 text-white border-none w-full flex items-center justify-center">
                                <i data-lucide="edit" class="h-4 w-4 mr-2"></i>
                                Edit Job Role
                            </a>
                            <button data-job-id="{{ job.id }}" class="delete-job-btn btn bg-red-600 hover:bg-red-700 text-white border-none w-full flex items-center justify-center">
                                <i data-lucide="trash-2" class="h-4 w-4 mr-2"></i>
                                Delete Job Role
                            </button>
                        </div>
                    </div>
                {% endif %}

                {% if job.actions.sidebarContent.showManageSection %}
                    <!-- View Applications Section - Admin Only -->
                    <div class="bg-purple-50 p-6 rounded-lg border border-purple-200 mb-6">
                        <h3 class="text-xl font-bold text-purple-800 mb-4">Manage Applications</h3>
                        <p class="text-purple-700 mb-4">View and manage all applications submitted for this role.</p>
                        <a href="/jobs/{{ job.id }}/applications" class="btn bg-purple-600 hover:bg-purple-700 text-white border-none w-full flex items-center justify-center">
                            <i data-lucide="file-text" class="h-4 w-4 mr-2"></i>
                            View Applications
                        </a>
                    </div>
                {% endif %}
                
                {% if job.actions.sidebarContent.showApplySection %}
                    <!-- Apply Section - Non-Admin Users -->
                    <div class="bg-blue-50 p-6 rounded-lg border border-blue-200 mb-6">
                        <h3 class="text-xl font-bold text-blue-800 mb-4">Ready to Apply?</h3>
                        {% if job.actions.sidebarContent.applyAction.show %}
                            {% if job.actions.sidebarContent.applyAction.text == "Apply Now" or job.actions.sidebarContent.applyAction.text == "Login to Apply" %}
                                <p class="text-blue-700 mb-4">Join our team and make a difference in the technology industry.</p>
                            {% elif job.actions.sidebarContent.applyAction.text == "No Positions Available" %}
                                <p class="text-gray-600 mb-4">All positions for this role have been filled.</p>
                            {% else %}
                                <p class="text-gray-600 mb-4">Applications for this position are currently closed.</p>
                            {% endif %}
                            
                            {% if job.actions.sidebarContent.applyAction.disabled %}
                                <button class="{{ job.actions.sidebarContent.applyAction.className }}" {% if job.actions.sidebarContent.applyAction.style %}style="{{ job.actions.sidebarContent.applyAction.style }}"{% endif %} disabled>{{ job.actions.sidebarContent.applyAction.text }}</button>
                            {% else %}
                                <a href="{{ job.actions.sidebarContent.applyAction.href }}" class="{{ job.actions.sidebarContent.applyAction.className }}" {% if job.actions.sidebarContent.applyAction.style %}style="{{ job.actions.sidebarContent.applyAction.style }}"{% endif %}>{{ job.actions.sidebarContent.applyAction.text }}</a>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endif %}

                <!-- Additional Info -->
                <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
                    <h3 class="text-xl font-bold text-gray-800 mb-4">About This Role</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-500">Job Type:</span>
                            <span class="font-medium">Full-time</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Contract:</span>
                            <span class="font-medium">Permanent</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Remote Work:</span>
                            <span class="font-medium">Hybrid</span>
                        </div>
                    </div>
                </div>

                <!-- Back to Jobs -->
                <div class="mt-6">
                    <a href="/jobs" class="btn bg-gray-100 hover:bg-gray-200 text-gray-800 border-gray-300 w-full flex items-center justify-center">
                        <i data-lucide="arrow-left" class="h-4 w-4 mr-2"></i>
                        Back to All Jobs
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const deleteButton = document.querySelector('.delete-job-btn');
    if (deleteButton) {
        deleteButton.addEventListener('click', function() {
            const jobId = this.getAttribute('data-job-id');
            confirmDelete(jobId);
        });
    }
});

function confirmDelete(jobId) {
    if (confirm('Are you sure you want to delete this job role? This action cannot be undone and will also delete all associated applications.')) {
        // Create a form and submit it for DELETE request
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/jobs/${jobId}/delete`;
        
        // Add CSRF token if needed (you might need to pass this from the backend)
        const csrfInput = document.createElement('input');
        csrfInput.type = 'hidden';
        csrfInput.name = '_method';
        csrfInput.value = 'DELETE';
        form.appendChild(csrfInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}
