{% extends "layout.njk" %}

{% block title %}{{ title }} - Kainos Job Portal{% endblock %}

{% block content %}
    <!-- Jobs Content Section -->
    <div class="container mx-auto px-6 py-12">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">{{ title }}</h1>
            <p class="text-xl text-gray-600">Discover exciting career opportunities at Kainos</p>
            <div class="mt-6">
                <a href="/jobs/create" class="btn bg-blue-600 hover:bg-blue-700 text-white border-none px-6 py-3 rounded-lg font-semibold inline-flex items-center no-underline">
                    <i data-lucide="plus-circle" class="h-5 w-5 mr-2"></i>
                    Create New Job Role
                </a>
            </div>
        </div>
        
        {% if errorMessage %}
            <div class="max-w-4xl mx-auto mb-8">
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
                    <div class="flex items-center">
                        <i data-lucide="alert-circle" class="h-5 w-5 mr-2"></i>
                        <span>{{ errorMessage }}</span>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if successMessage %}
            <div class="max-w-4xl mx-auto mb-8">
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
                    <div class="flex items-center">
                        <i data-lucide="check-circle" class="h-5 w-5 mr-2"></i>
                        <span>{{ successMessage }}</span>
                    </div>
                </div>
            </div>
        {% endif %}
        
        {% if jobs %}
            <div class="max-w-4xl mx-auto space-y-6">
                {% for job in jobs %}
                    <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
                        <a href="/jobs/{{ job.id }}" class="block">
                            <div class="text-2xl font-bold text-gray-800 mb-4 hover:text-blue-600 transition-colors">{{ job.name }}</div>
                        </a>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="map-pin" class="h-5 w-5 mr-2 text-blue-600"></i>
                                {{ job.location }}
                            </div>
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="building" class="h-5 w-5 mr-2 text-purple-600"></i>
                                {{ job.capability }}
                            </div>
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="badge" class="h-5 w-5 mr-2 text-green-600"></i>
                                {{ job.band }}
                            </div>
                            <div class="text-red-600 font-medium flex items-center">
                                <i data-lucide="calendar" class="h-5 w-5 mr-2"></i>
                                Closing: {{ job.closingDate }}
                            </div>
                            <div class="flex items-center">
                                {% if job.status == 'open' %}
                                    <i data-lucide="circle-check" class="h-5 w-5 mr-2 text-green-600"></i>
                                    <span class="text-green-600 font-medium">Open</span>
                                {% else %}
                                    <i data-lucide="circle-x" class="h-5 w-5 mr-2 text-red-600"></i>
                                    <span class="text-red-600 font-medium">Closed</span>
                                {% endif %}
                            </div>
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="users" class="h-5 w-5 mr-2 text-orange-600"></i>
                                {{ job.numberOfOpenPositions }} position{% if job.numberOfOpenPositions != 1 %}s{% endif %} available
                            </div>
                        </div>
                        <div class="flex justify-between items-center mt-4">
                            <div class="flex items-center gap-4">
                                <div class="flex items-center">
                                    {% if job.status == 'open' and job.numberOfOpenPositions > 0 %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                            <i data-lucide="circle-check" class="h-4 w-4 mr-1"></i>
                                            Accepting Applications
                                        </span>
                                    {% elif job.status == 'open' and job.numberOfOpenPositions == 0 %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                                            <i data-lucide="users-x" class="h-4 w-4 mr-1"></i>
                                            Positions Filled
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                            <i data-lucide="circle-x" class="h-4 w-4 mr-1"></i>
                                            Closed
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <a href="/jobs/{{ job.id }}" class="btn bg-blue-600 hover:bg-blue-700 text-white rounded-full border-none px-6 py-2">
                                View Details
                                <i data-lucide="arrow-right" class="h-4 w-4 ml-2"></i>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-16">
                <i data-lucide="briefcase" class="h-16 w-16 text-gray-400 mx-auto mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Job Opportunities Available</h3>
                <p class="text-gray-600">Check back soon for new career opportunities at Kainos!</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
