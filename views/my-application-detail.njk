{% extends "layout.njk" %}

{% block title %}My Application - {{ job.name }}{% endblock %}

{% block content %}
    <!-- Application Detail Content Section -->
    <div class="container mx-auto px-6 py-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <div class="flex items-center space-x-2 text-sm text-gray-600">
                <a href="/" class="hover:text-blue-600">Home</a>
                <span>/</span>
                <a href="/my-applications" class="hover:text-blue-600">My Applications</a>
                <span>/</span>
                <span class="text-gray-400">Application Details</span>
            </div>
        </nav>

        <!-- Error and Success Messages -->
        {% if errorDisplay.show %}
            <div class="{{ errorDisplay.containerClass }}">
                <div class="flex items-center">
                    <i data-lucide="{{ errorDisplay.iconClass }}" class="h-5 w-5 mr-3"></i>
                    <span>{{ errorDisplay.message }}</span>
                </div>
            </div>
        {% endif %}
        
        {% if successDisplay.show %}
            <div class="{{ successDisplay.containerClass }}">
                <div class="flex items-center">
                    <i data-lucide="{{ successDisplay.iconClass }}" class="h-5 w-5 mr-3"></i>
                    <span>{{ successDisplay.message }}</span>
                </div>
            </div>
        {% endif %}

        <!-- Application Header -->
        <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm mb-8">
            <div class="flex items-start justify-between mb-6">
                <div>
                    <h1 class="text-4xl font-bold text-gray-800 mb-2">My Application</h1>
                    <p class="text-lg text-gray-600">Application for {{ job.name }}</p>
                </div>
                <div>
                    <span class="px-4 py-3 text-lg rounded-full font-medium {{ application.statusDisplay.badgeClass }}">{{ application.statusDisplay.text }}</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-gray-200">
                <div class="flex items-center">
                    <i data-lucide="user" class="h-5 w-5 mr-3 text-blue-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Applicant Name</div>
                        <div class="font-medium text-gray-800">{{ application.applicantName }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="mail" class="h-5 w-5 mr-3 text-blue-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Email Address</div>
                        <div class="font-medium text-gray-800">{{ application.email }}</div>
                    </div>
                </div>
                {% if application.phoneNumber %}
                    <div class="flex items-center">
                        <i data-lucide="phone" class="h-5 w-5 mr-3 text-green-600"></i>
                        <div>
                            <div class="text-sm text-gray-500">Phone Number</div>
                            <div class="font-medium text-gray-800">{{ application.phoneNumber }}</div>
                        </div>
                    </div>
                {% endif %}
                <div class="flex items-center">
                    <i data-lucide="calendar" class="h-5 w-5 mr-3 text-purple-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Application Date</div>
                        <div class="font-medium text-gray-800">{{ application.applicationDate }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Cover Letter -->
                {% if application.coverLetter %}
                    <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm">
                        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                            <i data-lucide="file-text" class="h-6 w-6 mr-3 text-blue-600"></i>
                            Cover Letter
                        </h2>
                        <div class="prose max-w-none">
                            <p class="text-gray-700 leading-relaxed whitespace-pre-wrap">{{ application.coverLetter }}</p>
                        </div>
                    </div>
                {% endif %}

                <!-- CV Section (Placeholder) -->
                {% if application.cv %}
                    <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm">
                        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                            <i data-lucide="paperclip" class="h-6 w-6 mr-3 text-green-600"></i>
                            Curriculum Vitae
                        </h2>
                        <a href="{{ application.cv }}" class="btn bg-blue-600 hover:bg-blue-700 text-white border-none" target="_blank">
                            <i data-lucide="download" class="h-4 w-4 mr-2"></i>
                            Download CV
                        </a>
                    </div>
                {% endif %}

                <!-- Notes Section - Only show if there are reviewer notes -->
                {% if application.notes %}
                    <div class="bg-yellow-50 p-8 rounded-lg border border-yellow-200">
                        <h2 class="text-2xl font-bold text-yellow-800 mb-4 flex items-center">
                            <i data-lucide="sticky-note" class="h-6 w-6 mr-3 text-yellow-600"></i>
                            Reviewer Notes
                        </h2>
                        <p class="text-yellow-700 leading-relaxed">{{ application.notes }}</p>
                    </div>
                {% endif %}
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Application Status -->
                <div class="{{ application.statusDisplay.bgColor }} p-6 rounded-lg border {{ application.statusDisplay.borderColor }} mb-6">
                    <h3 class="text-xl font-bold {{ application.statusDisplay.color }} mb-3 flex items-center">
                        <i data-lucide="info" class="h-5 w-5 mr-2"></i>
                        Status
                    </h3>
                    <div class="space-y-2">
                        <div>
                            <span class="px-3 py-2 rounded-full font-medium {{ application.statusDisplay.badgeClass }}">
                                {{ application.statusDisplay.text }}
                            </span>
                        </div>
                        {% if application.status == 'pending' %}
                            <p class="{{ application.statusDisplay.color }} text-sm mt-3">Your application is awaiting review by our team.</p>
                        {% elif application.status == 'reviewed' %}
                            <p class="{{ application.statusDisplay.color }} text-sm mt-3">Your application is currently under review.</p>
                        {% elif application.status == 'accepted' %}
                            <p class="{{ application.statusDisplay.color }} text-sm mt-3">Congratulations! Your application has been accepted.</p>
                        {% elif application.status == 'rejected' %}
                            <p class="{{ application.statusDisplay.color }} text-sm mt-3">Unfortunately, your application was not successful this time.</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Job Information -->
                <div class="bg-blue-50 p-6 rounded-lg border border-blue-200 mb-6">
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Job Details</h3>
                    <div class="space-y-3">
                        <div>
                            <div class="text-sm text-blue-600">Position</div>
                            <div class="font-medium text-blue-900">{{ job.name }}</div>
                        </div>
                        <div>
                            <div class="text-sm text-blue-600">Location</div>
                            <div class="font-medium text-blue-900">{{ job.location }}</div>
                        </div>
                        <div>
                            <div class="text-sm text-blue-600">Capability</div>
                            <div class="font-medium text-blue-900">{{ job.capability }}</div>
                        </div>
                        <div>
                            <div class="text-sm text-blue-600">Band</div>
                            <div class="font-medium text-blue-900">{{ job.band }}</div>
                        </div>
                        <div>
                            <div class="text-sm text-blue-600">Closing Date</div>
                            <div class="font-medium text-blue-900">{{ job.closingDate }}</div>
                        </div>
                    </div>
                    <a href="/jobs/{{ job.id }}" class="btn bg-blue-600 hover:bg-blue-700 text-white border-none w-full mt-4">
                        <i data-lucide="eye" class="h-4 w-4 mr-2"></i>
                        View Job Posting
                    </a>
                </div>

                <!-- Navigation -->
                <div class="space-y-3">
                    <a href="/my-applications" class="btn bg-gray-100 hover:bg-gray-200 text-gray-800 border-gray-300 w-full flex items-center justify-center">
                        <i data-lucide="arrow-left" class="h-4 w-4 mr-2"></i>
                        Back to My Applications
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
