<!DOCTYPE html>
<html lang="en" data-theme="winter">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Professional Header -->
    <header class="navbar bg-base-100 shadow-md border-b border-base-300 sticky top-0 z-50">
        <div class="navbar-start">
            <a href="/" class="btn btn-ghost text-xl font-bold text-primary">
                <span class="text-2xl">üíº</span>
                JobPortal
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1 gap-2">
                <li><a href="/" class="btn btn-ghost font-medium">Home</a></li>
                <li><a href="/jobs" class="btn btn-ghost font-medium">Available Jobs</a></li>
            </ul>
        </div>
        <div class="navbar-end gap-2">
            <button class="btn btn-primary btn-sm lg:btn-md">Apply Now</button>
        </div>
    </header>

    <!-- Main Content -->
    <div class="min-h-screen bg-base-200">
        <div class="container mx-auto px-4 py-8">
            <!-- Page Header -->
            <div class="text-center mb-12">
                <h1 class="text-5xl font-bold mb-4">{{ title }}</h1>
                <p class="text-xl text-base-content/70">Find your next opportunity</p>
            </div>
            
            {% if jobs %}
                <!-- Job Listings -->
                <div class="max-w-4xl mx-auto space-y-6">
                    {% for job in jobs %}
                        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all duration-300 border border-base-300">
                            <div class="card-body">
                                <!-- Job Header -->
                                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                                    <h2 class="card-title text-2xl font-bold text-primary">{{ job.name }}</h2>
                                    <div class="badge badge-primary badge-lg mt-2 sm:mt-0">Open</div>
                                </div>
                                
                                <!-- Job Details Grid -->
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                                            <span class="text-primary">üìç</span>
                                        </div>
                                        <div>
                                            <div class="text-sm text-base-content/60">Location</div>
                                            <div class="font-medium">{{ job.location }}</div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 bg-secondary/10 rounded-full flex items-center justify-center">
                                            <span class="text-secondary">üè¢</span>
                                        </div>
                                        <div>
                                            <div class="text-sm text-base-content/60">Department</div>
                                            <div class="font-medium">{{ job.capability }}</div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center">
                                            <span class="text-accent">üéØ</span>
                                        </div>
                                        <div>
                                            <div class="text-sm text-base-content/60">Level</div>
                                            <div class="font-medium">{{ job.band }}</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Closing Date Alert -->
                                <div class="alert alert-warning mb-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.876c1.5 0 2.478-1.5 1.868-2.863L13.39 4.137c-.5-1.112-1.868-1.112-2.368 0L2.606 18.137C2.096 19.5 3.074 21 4.574 21z" />
                                    </svg>
                                    <span><strong>Application Deadline:</strong> {{ job.closingDate }}</span>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="card-actions justify-end">
                                    <button class="btn btn-ghost">View Details</button>
                                    <button class="btn btn-primary">Apply Now</button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
            {% else %}
                <!-- No Jobs Available -->
                <div class="hero min-h-[50vh]">
                    <div class="hero-content text-center">
                        <div class="max-w-md">
                            <div class="text-8xl mb-8">ÔøΩ</div>
                            <h2 class="text-3xl font-bold mb-4">No Jobs Available</h2>
                            <p class="text-lg mb-8 text-base-content/70">We don't have any openings right now, but new opportunities are posted regularly!</p>
                            <div class="space-y-4">
                                <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
                                <div>
                                    <button class="btn btn-outline">Get Notified</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-center p-8 bg-base-300 text-base-content">
        <div>
            <p class="font-bold text-lg">Job Portal</p>
            <p class="opacity-70">Your gateway to exciting career opportunities</p>
        </div>
    </footer>
    
    <script src="/js/index.js"></script>
</body>
</html>
{% extends "layout.njk" %}

{% block title %}{{ title }} - Kainos Job Portal{% endblock %}

{% block content %}
    <!-- Jobs Content Section -->
    <div class="container mx-auto px-6 py-12">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">{{ title }}</h1>
            <p class="text-xl text-gray-600">Discover exciting career opportunities at Kainos</p>
        </div>
        
        {% if jobs %}
            <div class="max-w-4xl mx-auto space-y-6">
                {% for job in jobs %}
                    <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200">
                        <div class="text-2xl font-bold text-gray-800 mb-4">{{ job.name }}</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="map-pin" class="h-5 w-5 mr-2 text-blue-600"></i>
                                {{ job.location }}
                            </div>
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="building" class="h-5 w-5 mr-2 text-purple-600"></i>
                                {{ job.capability }}
                            </div>
                            <div class="text-gray-600 flex items-center">
                                <i data-lucide="badge" class="h-5 w-5 mr-2 text-green-600"></i>
                                {{ job.band }}
                            </div>
                            <div class="text-red-600 font-medium flex items-center">
                                <i data-lucide="calendar" class="h-5 w-5 mr-2"></i>
                                Closing: {{ job.closingDate }}
                            </div>
                        </div>
                        <div class="flex justify-end">
                            <button class="btn bg-blue-600 hover:bg-blue-700 text-white border-none">Apply Now</button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-16">
                <i data-lucide="briefcase" class="h-16 w-16 text-gray-400 mx-auto mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Job Opportunities Available</h3>
                <p class="text-gray-600">Check back soon for new career opportunities at Kainos!</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
