{% extends "layout.njk" %}

{% block title %}Applications for {{ job.name }} - Kainos Job Portal{% endblock %}

{% block content %}
    <!-- Applications Content Section -->
    <div class="container mx-auto px-6 py-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <div class="flex items-center space-x-2 text-sm text-gray-600">
                <a href="/" class="hover:text-blue-600">Home</a>
                <span>/</span>
                <a href="/jobs" class="hover:text-blue-600">Jobs</a>
                <span>/</span>
                <a href="/jobs/{{ job.id }}" class="hover:text-blue-600">{{ job.name }}</a>
                <span>/</span>
                <span class="text-gray-400">Applications</span>
            </div>
        </nav>

        <!-- Page Header -->
        <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm mb-8">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-4xl font-bold text-gray-800 mb-2">Applications</h1>
                    <p class="text-lg text-gray-600">{{ job.name }}</p>
                </div>
                <div class="text-right">
                    <div class="text-sm text-gray-500">Total Applications</div>
                    <div class="text-3xl font-bold text-purple-600">{{ applications.length }}</div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pt-6 border-t border-gray-200">
                <div class="flex items-center">
                    <i data-lucide="map-pin" class="h-5 w-5 mr-3 text-blue-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Location</div>
                        <div class="font-medium text-gray-800">{{ job.location }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="building" class="h-5 w-5 mr-3 text-purple-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Capability</div>
                        <div class="font-medium text-gray-800">{{ job.capability }}</div>
                    </div>
                </div>
                <div class="flex items-center">
                    <i data-lucide="calendar" class="h-5 w-5 mr-3 text-red-600"></i>
                    <div>
                        <div class="text-sm text-gray-500">Closing Date</div>
                        <div class="font-medium text-red-600">{{ job.closingDate }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Applications List -->
        {% if applications.length > 0 %}
            <div class="space-y-4">
                {% for application in applications %}
                    <div class="p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow {% if application.status == 'accepted' %}bg-green-50 border-2 border-green-300{% elif application.status == 'rejected' %}bg-red-50 border-2 border-red-300{% else %}bg-white border border-gray-200{% endif %}">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-4 mb-3">
                                    <h3 class="text-xl font-bold text-gray-800">{{ application.applicantName }}</h3>
                                    {% if application.status == 'pending' %}
                                        <span class="badge badge-warning text-white px-3 py-2">Pending</span>
                                    {% elif application.status == 'reviewed' %}
                                        <span class="badge badge-info text-white px-3 py-2">Reviewed</span>
                                    {% elif application.status == 'accepted' %}
                                        <span class="badge badge-success text-white px-3 py-2">Accepted</span>
                                    {% elif application.status == 'rejected' %}
                                        <span class="badge badge-error text-white px-3 py-2">Rejected</span>
                                    {% endif %}
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                                    <div class="flex items-center">
                                        <i data-lucide="mail" class="h-4 w-4 mr-2 text-gray-500"></i>
                                        <a href="mailto:{{ application.email }}" class="text-blue-600 hover:underline">{{ application.email }}</a>
                                    </div>
                                    {% if application.phoneNumber %}
                                        <div class="flex items-center">
                                            <i data-lucide="phone" class="h-4 w-4 mr-2 text-gray-500"></i>
                                            <a href="tel:{{ application.phoneNumber }}" class="text-blue-600 hover:underline">{{ application.phoneNumber }}</a>
                                        </div>
                                    {% endif %}
                                    <div class="flex items-center">
                                        <i data-lucide="calendar" class="h-4 w-4 mr-2 text-gray-500"></i>
                                        <span class="text-gray-600">Applied: {{ application.applicationDate }}</span>
                                    </div>
                                </div>

                                {% if application.coverLetter %}
                                    <div class="mt-4 p-4 bg-gray-50 rounded border border-gray-200">
                                        <div class="flex items-center mb-2">
                                            <i data-lucide="file-text" class="h-4 w-4 mr-2 text-gray-500"></i>
                                            <span class="font-medium text-gray-700">Cover Letter</span>
                                        </div>
                                        <p class="text-gray-600 text-sm line-clamp-3">{{ application.coverLetter }}</p>
                                    </div>
                                {% endif %}

                                {% if application.notes %}
                                    <div class="mt-4 p-4 bg-yellow-50 rounded border border-yellow-200">
                                        <div class="flex items-center mb-2">
                                            <i data-lucide="sticky-note" class="h-4 w-4 mr-2 text-yellow-600"></i>
                                            <span class="font-medium text-yellow-800">Notes</span>
                                        </div>
                                        <p class="text-yellow-700 text-sm">{{ application.notes }}</p>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="ml-4">
                                <a href="/jobs/{{ job.id }}/applications/{{ application.id }}" class="btn bg-purple-600 hover:bg-purple-700 text-white border-none">
                                    <i data-lucide="eye" class="h-4 w-4 mr-2"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <!-- No Applications Message -->
            <div class="bg-white p-12 rounded-lg border border-gray-200 shadow-sm text-center">
                <i data-lucide="inbox" class="h-16 w-16 mx-auto mb-4 text-gray-400"></i>
                <h3 class="text-2xl font-bold text-gray-800 mb-2">No Applications Yet</h3>
                <p class="text-gray-600 mb-6">There are currently no applications for this job role.</p>
                <a href="/jobs/{{ job.id }}" class="btn bg-blue-600 hover:bg-blue-700 text-white border-none">
                    <i data-lucide="arrow-left" class="h-4 w-4 mr-2"></i>
                    Back to Job Details
                </a>
            </div>
        {% endif %}

        <!-- Back to Job Button -->
        <div class="mt-8">
            <a href="/jobs/{{ job.id }}" class="btn bg-gray-100 hover:bg-gray-200 text-gray-800 border-gray-300 inline-flex items-center">
                <i data-lucide="arrow-left" class="h-4 w-4 mr-2"></i>
                Back to Job Details
            </a>
        </div>
    </div>
{% endblock %}
