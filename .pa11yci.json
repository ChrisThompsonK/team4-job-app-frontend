    },
    {
      "url": "http://localhost:3000/jobs/create",
      "screenCapture": "./pa11y-screenshots/create-job.png"
    },
    {
      "url": "http://localhost:3000/login",
      "screenCapture": "./pa11y-screenshots/login.png"
    }
  ]
}
