{% extends "layout.njk" %}

{% block title %}Create New Job Role - Kainos Job Portal{% endblock %}

{% block content %}
    <!-- Create Job Role Form Section -->
    <div class="container mx-auto px-6 py-12">
        <div class="max-w-3xl mx-auto">
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-gray-800 mb-4">Create New Job Role</h1>
                <p class="text-xl text-gray-600">Add a new career opportunity to the Kainos Job Portal</p>
            </div>

            {% if errorMessage %}
                <div class="mb-8">
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
                        <div class="flex items-center">
                            <i data-lucide="alert-circle" class="h-5 w-5 mr-2"></i>
                            <span>{{ errorMessage }}</span>
                        </div>
                    </div>
                </div>
            {% endif %}

            <form id="createJobForm" class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm">
                <!-- Job Title -->
                <div class="mb-6">
                    <label for="name" class="block text-gray-700 font-semibold mb-2">
                        Job Title <span class="text-red-600">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="e.g., Senior Software Engineer"
                    />
                </div>

                <!-- Location -->
                <div class="mb-6">
                    <label for="location" class="block text-gray-700 font-semibold mb-2">
                        Location <span class="text-red-600">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="location" 
                        name="location" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="e.g., Belfast, UK"
                    />
                </div>

                <!-- Capability -->
                <div class="mb-6">
                    <label for="capability" class="block text-gray-700 font-semibold mb-2">
                        Capability <span class="text-red-600">*</span>
                    </label>
                    <select 
                        id="capability" 
                        name="capability" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        <option value="">Select capability...</option>
                        <option value="Engineering">Engineering</option>
                        <option value="Platforms">Platforms</option>
                        <option value="Data">Data</option>
                        <option value="Artificial Intelligence">Artificial Intelligence</option>
                        <option value="Cyber Security">Cyber Security</option>
                        <option value="Workday">Workday</option>
                        <option value="Experience Design">Experience Design</option>
                    </select>
                </div>

                <!-- Band -->
                <div class="mb-6">
                    <label for="band" class="block text-gray-700 font-semibold mb-2">
                        Band <span class="text-red-600">*</span>
                    </label>
                    <select 
                        id="band" 
                        name="band" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        <option value="">Select band...</option>
                        <option value="Trainee">Trainee</option>
                        <option value="Associate">Associate</option>
                        <option value="Senior Associate">Senior Associate</option>
                        <option value="Consultant">Consultant</option>
                        <option value="Manager">Manager</option>
                        <option value="Principal">Principal</option>
                        <option value="Leadership Community">Leadership Community</option>
                    </select>
                </div>

                <!-- Closing Date -->
                <div class="mb-6">
                    <label for="closingDate" class="block text-gray-700 font-semibold mb-2">
                        Closing Date <span class="text-red-600">*</span>
                    </label>
                    <input 
                        type="date" 
                        id="closingDate" 
                        name="closingDate" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>

                <!-- Number of Open Positions -->
                <div class="mb-6">
                    <label for="numberOfOpenPositions" class="block text-gray-700 font-semibold mb-2">
                        Number of Open Positions <span class="text-red-600">*</span>
                    </label>
                    <input 
                        type="number" 
                        id="numberOfOpenPositions" 
                        name="numberOfOpenPositions" 
                        required
                        min="0"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="e.g., 3"
                    />
                </div>

                <!-- Status -->
                <div class="mb-6">
                    <label for="status" class="block text-gray-700 font-semibold mb-2">
                        Status <span class="text-red-600">*</span>
                    </label>
                    <select 
                        id="status" 
                        name="status" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        <option value="">Select status...</option>
                        <option value="open">Open</option>
                        <option value="closed">Closed</option>
                    </select>
                </div>

                <!-- Summary -->
                <div class="mb-6">
                    <label for="summary" class="block text-gray-700 font-semibold mb-2">
                        Summary <span class="text-red-600">*</span>
                    </label>
                    <textarea 
                        id="summary" 
                        name="summary" 
                        required
                        rows="4"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Provide a brief summary of the role..."
                    ></textarea>
                </div>

                <!-- Key Responsibilities -->
                <div class="mb-6">
                    <label for="keyResponsibilities" class="block text-gray-700 font-semibold mb-2">
                        Key Responsibilities <span class="text-red-600">*</span>
                    </label>
                    <textarea 
                        id="keyResponsibilities" 
                        name="keyResponsibilities" 
                        required
                        rows="6"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="List the main responsibilities for this role..."
                    ></textarea>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                    <a href="/jobs" class="text-gray-600 hover:text-gray-800 font-medium">
                        <i data-lucide="arrow-left" class="h-5 w-5 inline mr-2"></i>
                        Back to Jobs
                    </a>
                    <button 
                        type="submit" 
                        class="btn bg-blue-600 hover:bg-blue-700 text-white border-none px-8 py-3 rounded-lg font-semibold"
                    >
                        Create Job Role
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('createJobForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = {
                name: formData.get('name'),
                location: formData.get('location'),
                capability: formData.get('capability'),
                band: formData.get('band'),
                closingDate: formData.get('closingDate'),
                numberOfOpenPositions: parseInt(formData.get('numberOfOpenPositions')),
                status: formData.get('status'),
                summary: formData.get('summary'),
                keyResponsibilities: formData.get('keyResponsibilities')
            };

            try {
                const response = await fetch('/jobs/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    // Redirect to jobs page on success
                    window.location.href = '/jobs?success=created';
                } else {
                    const error = await response.json();
                    alert('Error creating job role: ' + (error.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to create job role. Please try again.');
            }
        });
    </script>
{% endblock %}
