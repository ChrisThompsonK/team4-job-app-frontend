{% extends "layout.njk" %}

{% block title %}{{ title }} - Kainos Job Portal{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-10rem)] flex items-center justify-center bg-gradient-to-r from-red-50 to-orange-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full text-center">
            <!-- Error Card -->
            <div class="bg-white p-8 rounded-lg border border-red-200 shadow-lg">
                <!-- Error Icon -->
                <div class="flex justify-center mb-6">
                    <div class="bg-red-100 p-4 rounded-full">
                        <i data-lucide="alert-circle" class="h-12 w-12 text-red-600"></i>
                    </div>
                </div>

                <!-- Error Details -->
                <h1 class="text-4xl font-bold text-gray-900 mb-2">{{ statusCode or "Error" }}</h1>
                <h2 class="text-xl font-semibold text-gray-800 mb-4">{{ title }}</h2>
                <p class="text-gray-600 mb-8">{{ message }}</p>

                <!-- Action Buttons -->
                <div class="space-y-3">
                    <a href="/" class="btn bg-blue-600 hover:bg-blue-700 text-white border-none w-full">
                        <i data-lucide="home" class="h-5 w-5 mr-2"></i>
                        Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline w-full">
                        <i data-lucide="arrow-left" class="h-5 w-5 mr-2"></i>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}