{
  "name": "team4-job-app-frontend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "npx @tailwindcss/cli -i ./styles/main.css -o ./dist/styles.css",
    "build:css:watch": "npx @tailwindcss/cli -i ./styles/main.css -o ./dist/styles.css --watch",
    "dev": "npm run build:css && concurrently \"npm run build:css:watch\" \"tsx watch src/index.ts\"",
    "dev:css": "npm run build:css:watch",
    "start": "node dist/src/index.js",
    "start:prod": "npm run build && npm start",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "preview": "npm run build:css && open index.html",
    "premerge": "npm run format:check && npm run check && npm run test:run && npm run build",
    "premerge:fix": "npm run lint:fix && npm run format && npm run test:run && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/cli": "^4.1.0",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.0",
    "@types/nunjucks": "^3.2.6",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.0",
    "daisyui": "^5.1.26",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4"
  }
}
