{% extends "layout.njk" %}

{% block title %}Login - Kainos Job Portal{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-10rem)] flex items-center justify-center bg-white py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full">
            <!-- Login Card -->
            <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-lg">
                <!-- Header -->
                <div class="text-center mb-8">
                    <div class="flex justify-center mb-4">
                        <div class="bg-gradient-to-r from-blue-50 to-purple-50 px-8 py-4 rounded-lg">
                            <img src="/images/Kainos-logo.png" alt="Kainos Logo" class="h-12 w-auto object-contain transform scale-175">
                        </div>
                    </div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back</h1>
                    <p class="text-gray-900">Login to your account to continue</p>
                </div>

                <!-- Error/Success Messages -->
                {% if errorDisplay.show %}
                    <div class="{{ errorDisplay.containerClass }}">
                        <div class="flex items-center">
                            <i data-lucide="{{ errorDisplay.iconClass }}" class="h-5 w-5 mr-2"></i>
                            {{ errorDisplay.message }}
                        </div>
                    </div>
                {% endif %}

                {% if successDisplay.show %}
                    <div class="{{ successDisplay.containerClass }}">
                        <div class="flex items-center">
                            <i data-lucide="{{ successDisplay.iconClass }}" class="h-5 w-5 mr-2"></i>
                            {{ successDisplay.message }}
                        </div>
                    </div>
                {% endif %}

                <!-- Login Form -->
                <form method="POST" action="/login" class="space-y-6">
                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Enter your email address"
                        />
                    </div>

                    <!-- Password -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Enter your password"
                        />
                    </div>

                    <!-- Login Button -->
                    <div class="pt-4">
                        <button 
                            type="submit" 
                            class="btn bg-blue-700 hover:bg-blue-800 text-white border-none w-full"
                        >
                            <i data-lucide="log-in" class="h-5 w-5 mr-2"></i>
                            Login
                        </button>
                    </div>
                </form>
            </div>

            <!-- Additional Info -->
            <div class="text-center mt-6">
                <p class="text-sm text-gray-950">
                    Don't have an account? 
                    <a href="/register" class="text-blue-800 hover:text-blue-950 font-medium">Sign up</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
