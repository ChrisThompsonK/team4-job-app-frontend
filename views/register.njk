{% extends "layout.njk" %}

{% block title %}Register - Kainos Job Portal{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-10rem)] flex items-center justify-center bg-white py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full">
            <!-- Registration Card -->
            <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-lg">
                <!-- Header -->
                <div class="text-center mb-8">
                    <div class="flex justify-center mb-4">
                        <div class="bg-gradient-to-r from-blue-50 to-purple-50 p-3 rounded-lg">
                            <img src="/images/Kainos-logo.jpg" alt="Kainos Logo" class="h-12">
                        </div>
                    </div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">Join Kainos</h1>
                    <p class="text-gray-900">Create your account to get started</p>
                </div>

                <!-- Error/Success Messages -->
                {% if errorDisplay.show %}
                    <div class="{{ errorDisplay.containerClass }}">
                        <div class="flex items-center">
                            <i data-lucide="{{ errorDisplay.iconClass }}" class="h-5 w-5 mr-2"></i>
                            {{ errorDisplay.message }}
                        </div>
                    </div>
                {% endif %}

                {% if successDisplay.show %}
                    <div class="{{ successDisplay.containerClass }}">
                        <div class="flex items-center">
                            <i data-lucide="{{ successDisplay.iconClass }}" class="h-5 w-5 mr-2"></i>
                            {{ successDisplay.message }}
                        </div>
                    </div>
                {% endif %}

                <!-- Registration Form -->
                <form method="POST" action="/register" class="space-y-6">
                    <!-- First Name -->
                    <div>
                        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                            First Name <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            id="firstName" 
                            name="firstName" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Enter your first name"
                        />
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                            Last Name <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            id="lastName" 
                            name="lastName" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Enter your last name"
                        />
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Enter your email address"
                        />
                    </div>

                    <!-- Password -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Create a strong password"
                        />
                        <p class="text-xs text-gray-600 mt-1">
                            Must be at least 8 characters with uppercase, lowercase, and number
                        </p>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm Password <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            required
                            class="input input-bordered w-full"
                            placeholder="Confirm your password"
                        />
                    </div>

                    <!-- Register Button -->
                    <div class="pt-4">
                        <button 
                            type="submit" 
                            class="btn bg-blue-700 hover:bg-blue-800 text-white border-none w-full"
                        >
                            <i data-lucide="user-plus" class="h-5 w-5 mr-2"></i>
                            Create Account
                        </button>
                    </div>
                </form>
            </div>

            <!-- Additional Info -->
            <div class="text-center mt-6">
                <p class="text-sm text-gray-950">
                    Already have an account? 
                    <a href="/login" class="text-blue-800 hover:text-blue-950 font-medium">Sign in</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}